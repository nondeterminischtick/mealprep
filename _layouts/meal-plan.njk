---
layout: base.njk
---

<div class="card mb-lg">
    <div class="card-header">
        <h3 class="card-title">Your Meal Plan</h3>
        <p class="text-muted">Recipes you've planned to cook</p>
    </div>
    
    <div class="flex gap-md mb-md">
        <button class="btn btn-error" onclick="clearMealPlan()" id="clear-meal-plan-btn" style="display: none;">
            <svg class="btn-icon" viewBox="0 0 24 24" fill="currentColor">
                <path d="M19,4H15.5L14.5,3H9.5L8.5,4H5V6H19M6,19A2,2 0 0,0 8,21H16A2,2 0 0,0 18,19V7H6V19Z"/>
            </svg>
            <span>Clear Meal Plan</span>
        </button>
    </div>
    
    <div id="meal-plan-items"></div>
</div>

{% block pageScripts %}
  <script src="/js/meal-plan.js"></script>
{% endblock %}