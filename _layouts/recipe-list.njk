---
title: Recipes
layout: base.njk
---

<div class="card mb-lg">
    <div class="form-group">
        <label class="form-label" for="recipe-search">Search Recipes</label>
        <input type="text" class="form-input" id="recipe-search" placeholder="Search by recipe name..." oninput="filterRecipes()">
    </div>
</div>

<div class="recipe-grid" id="recipe-grid">
{%- for post in collections.recipe -%}
    <article class="recipe-card" data-title="{{ post.data.title | lower }}">
        <a href="{{ post.page.url }}" class="recipe-card-link">
            <div class="recipe-card-content">
                <div class="recipe-header">
                    <h3 class="recipe-title">{{ post.data.title }}</h3>
                    {% if post.data.Notes %}
                    <div class="recipe-notes">
                        <svg class="notes-icon" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M14,3V5H17.59L7.76,14.83L9.17,16.24L19,6.41V10H21V3M19,19H5V5H12V3H5C3.89,3 3,3.9 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V12H19V19Z"/>
                        </svg>
                        <span class="notes-text">{{ post.data.Notes }}</span>
                    </div>
                    {% endif %}
                </div>
                
                <div class="recipe-meta">
                    {% if post.data.Prep %}
                    <div class="meta-item">
                        <svg class="meta-icon" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M12,20A8,8 0 0,0 20,12A8,8 0 0,0 12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20M12,2A10,10 0 0,1 22,12A10,10 0 0,1 12,22C6.47,22 2,17.5 2,12A10,10 0 0,1 12,2M12.5,7V12.25L17,14.92L16.25,16.15L11,13V7H12.5Z"/>
                        </svg>
                        <div class="meta-content">
                            <span class="meta-value">{{ post.data.Prep }}</span>
                            <span class="meta-label">min prep</span>
                        </div>
                    </div>
                    {% endif %}
                    
                    {% if post.data.Total %}
                    <div class="meta-item">
                        <svg class="meta-icon" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M12,2A10,10 0 0,1 22,12A10,10 0 0,1 12,22A10,10 0 0,1 2,12A10,10 0 0,1 12,2M12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20A8,8 0 0,0 20,12A8,8 0 0,0 12,4M12,6A6,6 0 0,1 18,12A6,6 0 0,1 12,18A6,6 0 0,1 6,12A6,6 0 0,1 12,6M12,8A4,4 0 0,0 8,12A4,4 0 0,0 12,16A4,4 0 0,0 16,12A4,4 0 0,0 12,8Z"/>
                        </svg>
                        <div class="meta-content">
                            <span class="meta-value">{{ post.data.Total }}</span>
                            <span class="meta-label">min total</span>
                        </div>
                    </div>
                    {% endif %}
                    
                    {% if post.data.Servings %}
                    <div class="meta-item">
                        <svg class="meta-icon" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M16,4C16.88,4 17.67,4.84 17.67,5.84C17.67,6.82 16.88,7.68 16,7.68C15.12,7.68 14.33,6.82 14.33,5.84C14.33,4.84 15.12,4 16,4M13,9H19V22H13V9M12,2H6V22H12V2Z"/>
                        </svg>
                        <div class="meta-content">
                            <span class="meta-value">{{ post.data.Servings }}</span>
                            <span class="meta-label">servings</span>
                        </div>
                    </div>
                    {% endif %}
                </div>
            </div>
        </a>
    </article>
{%- endfor -%}
</div>

<div id="no-results" class="card card-compact text-center text-muted hidden">
    <p>No recipes found matching your search.</p>
</div>

{% block pageScripts %}
  <script src="/js/recipe-search.js"></script>
{% endblock %}